<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
  xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="logservice" transaction-type="RESOURCE_LOCAL">
    <!-- Persistence provider -->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <!-- Entity classes -->
    <class>com.nabucco.petshop.domain.Log</class>
    <properties>
      <!-- The JDBC driver of your database -->
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
      <!-- The JDBC URL to the database instance | this values is set in class Configuration -->
      <property name="javax.persistence.jdbc.url" value="" />
      <!-- The database username | this values is set in class Configuration -->
      <property name="javax.persistence.jdbc.user" value="" />
      <!-- The database password | this values is set in class Configuration -->
      <property name="javax.persistence.jdbc.password" value="" />
    </properties>
  </persistence-unit>
</persistence>